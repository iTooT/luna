                <tr>
                  <td><% if r.restaurateur != nil %>
                          <%= "#{r.restaurateur.nom}" + " " + "#{r.restaurateur.prenom}"%></td>
                      <% end %>
                  <td><%= r.nom %></td>
                  <td><%= r.adresse.telephone %></td>
                  <td><%= r.adresse.no_maison %></td>
                  <td><%= r.adresse.rue %></td>
                  <td><%= r.adresse.ville %></td>
                  <td><%= r.adresse.code_postal %></td>
                </tr>
                <% end %>
              </table>
              </div>
            </div>

              <div id="add-livreur" class="row">
                 <div  class="large-4 columns group">
                <span class="add-title">Ajout d'un livreur</span>
                <div class="row">
                  <!--*********************** ajouter Livreur ******************************-->
                <%= form_for @nouveau_livreur, url: {action: "saisirInformationsLivreur"}, html:{class: "large-10 columns"}  do |f| %>
                    <%= f.text_field :nom, :placeholder => "nom", :class => "large-10 columns" %>
                    <%= f.text_field :prenom, :placeholder => "prenom", :class => "large-10 columns" %>
