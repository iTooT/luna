                    <%= f.password_field :mot_de_passe, :placeholder => "mot de passe", :class => "large-10 columns" %>
                    <%= f.submit "Ajouter livreur", :class => "admin-btn-style" %>   
                <% end %>
                </div>
              </div>
              <div class="large-8 columns group dashboard-table">
                  <table>
                  <tr class="table-title">
                    <th>Utilisateur</th>
                    <th>Mot de passe</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                  </tr>       
                  <% @livreurs.each do |l| %>  
                  <tr>
                    <td><%= l.identificateur %></td>
                    <td><%= l.mot_de_passe %></td>
