              <table id="restaurants_table">
                <tr class="table-title">
                  <th>Restaurateur</th>
                  <th>Nom</th>
                  <th>Téléphone</th>
                  <th>Numéro</th>
                  <th>Rue</th>
                  <th>Ville</th>
