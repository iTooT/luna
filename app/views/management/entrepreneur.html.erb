                    <div  class="large-4 columns group">
                <span class="add-title">Edition restaurant</span>
                <div class="row">

                  <% form_select_array = @restaurateurs_sans_restaurants.map {|i| ["#{i.nom} #{i.prenom}",i.id] } %>
